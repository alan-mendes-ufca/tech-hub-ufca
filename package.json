{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do www.tabnews.com.br para o cuso.dev",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node infra/scripts/dev-runner.cjs",
    "dev:build": "npm run services:up && npm run services:wait:database && npm run db:reset && npm run migrations:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.cjs",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check-dir": "eslint .",
    "lint:eslint:check-file": "eslint",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "postgres": "psql --host=localhost --username=postgres --port=5432",
    "db:reset": "node infra/scripts/db-reset.cjs",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations  --envPath .env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.3",
    "cli-spinner": "0.2.10",
    "cookie": "1.1.1",
    "dotenv": "17.3.1",
    "dotenv-expand": "12.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "next": "16.1.6",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "nodemailer": "8.0.1",
    "pg": "8.12.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "swr": "2.4.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@faker-js/faker": "9.7.0",
    "@secretlint/secretlint-rule-preset-recommend": "11.3.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-jest": "29.14.0",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.2",
    "secretlint": "11.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
